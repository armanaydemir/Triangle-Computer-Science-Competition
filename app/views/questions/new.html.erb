<% provide(:title, 'Submit Questions') %>
<h1>Question Sumbission</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@question) do |f| %>
      
      <%= f.label :name, "Title" %>
      <span>        Â¡Exact Explanations Here!</span>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area :description, :cols => "10", :rows => "10", class: 'form-control'%>
      
      <%= f.label :category%>
      <%= f.select :category, options_for_select(["Algorithm", "Cryptography", "Research/Reconassaince", "Reverse Engineering"]) %>
      
      <%= f.label :difficulty, "Difficulty from 1-10" %>
      <%= f.text_field :difficulty, class: 'form-control'%>
      
      <%= f.label :contributor, "Your Name" %>
      <%= f.text_field :contributor, class: 'form-control'%>
      
      <%= f.label :display_name, class: "checkbox inline" do %>
        <%= f.check_box :display_name %>
        <span>I want you to credit me</span>
      <% end %>

      <%= f.submit "Submit Question", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
